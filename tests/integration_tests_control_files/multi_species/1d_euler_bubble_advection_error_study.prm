# Listing of Parameters
# ---------------------

set test_type = euler_bubble_advection_error_study

set dimension = 1
set pde_type = euler

# DG formulation
set use_weak_form = true
#set use_inverse_mass_on_the_fly = true
#set overintegration = 2
# set flux_nodes_type = GLL
set non_physical_behavior = abort_run

# set directry to write output data
#set solution_vtk_files_directory_name = realgas

# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# degree of freedom renumbering not necessary for explicit time advancement cases
set do_renumber_dofs = false

# numerical fluxes
set conv_num_flux = lax_friedrichs
set diss_num_flux = symm_internal_penalty

# ODE solver
subsection ODE solver
  set output_solution_every_x_steps = 1000
  set ode_output = quiet
  set ode_solver_type = runge_kutta
  set runge_kutta_method = ssprk3_ex
end

# Reference for freestream values specified below:
# Diosady, L., and S. Murman. "Case 3.3: Taylor green vortex evolution." Case Summary for 3rd International Workshop on Higher-Order CFD Methods. 2015.

# freestream Mach number
subsection euler
  set mach_infinity = 0.1
end

subsection flow_solver
  set flow_case_type = euler_bubble_advection
  #####set poly_degree = 1
  set final_time = 34.614724700315755e-0
  set adaptive_time_step = false
  set constant_time_step = 34.614724700315755e-4
  subsection grid
    set grid_left_bound = -25.0
    set grid_right_bound = 25.0
    #####set number_of_grid_elements_per_dimension = 16
  end
end 

subsection manufactured solution convergence study
  # Last degree used for convergence study
  set degree_end        = 2

  # Starting degree for convergence study
  set degree_start      = 2

  set grid_progression  = 2

  set grid_progression_add  = 0

  # Initial grid of size (initial_grid_size)^dim
  set initial_grid_size = 16

  # Number of grids in grid study
  set number_of_grids   = 5
end