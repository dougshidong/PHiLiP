set test_type = stability_fr_parameter_range

set dimension = 1

set use_weak_form = false

set overintegration = 0

set flux_nodes_type = GL

set use_split_form = false

set use_energy = false

set use_L2_norm = false

set use_classical_FR = false

set use_periodic_bc = true

#set flux_reconstruction = cPlus
set flux_reconstruction = user_specified_value
set FR_user_specified_correction_parameter_value = 0.186 #0.186; 3.67e-3; 4.79e-5; 4.24e-7

set use_inverse_mass_on_the_fly = true

#set use_skew_sym_deriv = false

set pde_type = burgers_inviscid

set conv_num_flux = lax_friedrichs
#set conv_num_flux = central_flux
#set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation

subsection ODE solver

  # set ode_output = verbose
  # set output_solution_every_x_steps = 10
  
  set nonlinear_max_iterations = 500000

  set print_iteration_modulo = 10000

  set ode_solver_type = runge_kutta

  set initial_time_step = 0.0001
  #set initial_time_step = 0.00005

  set runge_kutta_method = rk4_ex

end

subsection manufactured solution convergence study
  set use_manufactured_source_term = true
  
  # Starting degree for convergence study
  set degree_start      = 2

  # Initial grid of size 2^initial_grid_size
  set initial_grid_size = 3

  # Number of grids in grid study
  set number_of_grids   = 3
end


subsection flow_solver
  set flow_case_type = burgers_inviscid
  set final_time = 0.01
  set poly_degree = 2
  #set apply_initial_fondition_method = project_initial_condition_function
  subsection grid
    set grid_left_bound =  0.0
    set grid_right_bound = 2.0
  end
  subsection ESFR_parameter_tests
    set number_ESFR_parameter_values = 2
    set ESFR_parameter_values_start = 1.0e-5
    set ESFR_parameter_values_end = 1.0e6
  end
end
