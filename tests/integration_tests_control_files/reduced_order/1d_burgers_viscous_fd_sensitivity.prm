# Listing of Parameters
# ---------------------

set dimension = 1
set test_type = flow_solver
set pde_type = burgers_viscous

set use_weak_form = true
set use_collocated_nodes = false

subsection grid refinement study
 set num_refinements = 10
 set poly_degree = 0
 set grid_left = 0.0
 set grid_right = 1.0
end

subsection burgers
  set diffusion_coefficient = 0.01
end

subsection flow_solver
  set flow_case_type = burgers_viscous_snapshot
  set final_time = 1.0
  set steady_state = false
end

subsection ODE solver
 set initial_time_step = 0.1
 set nonlinear_max_iterations            = 500
 set nonlinear_steady_residual_tolerance = 1e-12
 set print_iteration_modulo              = 1
 set output_solution_vector_modulo       = 1
 set solutions_table_filename = 3_0.02_solutions_table_steady
 set ode_solver_type                     = implicit
 end

subsection manufactured solution convergence study
 set use_manufactured_source_term = true
end
