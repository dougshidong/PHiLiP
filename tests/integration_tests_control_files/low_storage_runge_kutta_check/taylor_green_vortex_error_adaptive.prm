# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 3
set run_type = flow_simulation #integration_test
set test_type = time_refinement_study
set pde_type = euler

# DG formulation
set use_weak_form = false
set use_split_form = true
set flux_nodes_type = GLL

set flux_reconstruction = cDG
set use_inverse_mass_on_the_fly = true

# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# numerical fluxes
set conv_num_flux = two_point_flux
set two_point_num_flux_type = Ra

# ODE solver
subsection ODE solver
  #set ode_solver_type = runge_kutta #this is changed by the test
  #set runge_kutta_method = ssprk3_ex
  set ode_output = verbose
  set ode_solver_type = low_storage_runge_kutta
  set output_solution_every_dt_time_intervals = 0.1
  set initial_time_step = 2.5E-3
  set runge_kutta_method = RK3_2_5F_3SStarPlus
  subsection low-storage rk solver
    set atol = 1e-3
    set rtol = 1e-3
    set beta1 = 0.70
    set beta2 = -0.23
    set beta3 = 0.0
  end
end

subsection time_refinement_study
  set number_of_times_to_solve = 1
  #set refinement_ratio = 0.5
end

# freestream Mach number
subsection euler
  set mach_infinity = 0.1
end

subsection flow_solver
  set flow_case_type = taylor_green_vortex
  set poly_degree = 3 
  set final_time = 1.0
  set courant_friedrichs_lewy_number = 0.1
  set unsteady_data_table_filename = tgv_kinetic_energy_vs_time_table
  set error_adaptive_time_step = true
  subsection grid
    set grid_left_bound = -3.1415926535897932
    set grid_right_bound = 3.1415926535897932
    set number_of_grid_elements_per_dimension = 4
  end
  subsection taylor_green_vortex
    set do_calculate_numerical_entropy = true
    set density_initial_condition_type = isothermal
  end
end
