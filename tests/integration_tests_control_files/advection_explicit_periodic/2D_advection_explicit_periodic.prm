# -------------------

set test_type = advection_periodicity

# Number of dimensions
set dimension = 2

#set use_weak_form = true
set use_weak_form = false

set use_collocated_nodes = false

set use_split_form = false

set use_periodic_bc = true

set use_energy = true

set use_L2_norm = false

set use_skew_sym_deriv = false

set use_jac_sol_points = false

set flux_reconstruction = cDG
#set flux_reconstruction_aux = kHU
set use_projected_flux = false

set use_classical_Flux_Reconstruction = false

# The PDE we want to solve
set pde_type = advection

set conv_num_flux = lax_friedrichs

subsection ODE solver

  set ode_output = verbose
  
 # set nonlinear_max_iterations = 500
  set nonlinear_max_iterations = 50000
  set nonlinear_steady_residual_tolerance = 1e-12

  set print_iteration_modulo = 100

  #set ode_solver_type = implicit
  set ode_solver_type = explicit

  set initial_time_step = 0.001
  #set initial_time_step = 0.00001
  #set initial_time_step = 0.0001

end
