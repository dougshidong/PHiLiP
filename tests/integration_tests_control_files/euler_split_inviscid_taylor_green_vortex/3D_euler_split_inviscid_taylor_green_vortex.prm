# -------------------
# Number of dimensions
set dimension = 3

set test_type = euler_split_taylor_green

set use_weak_form = false

set use_collocated_nodes = true

set use_split_form = true

# The PDE we want to solve
set pde_type = euler

#set conv_num_flux = split_form
set conv_num_flux = entropy_conserving_flux

set use_energy = true

set flux_reconstruction = cDG

set use_inverse_mass_on_the_fly = true

set use_periodic_bc = true

set use_classical_FR = true

subsection ODE solver

  set ode_output = verbose
  
  set nonlinear_max_iterations = 500

  set print_iteration_modulo = 100

  set ode_solver_type = explicit

  set initial_time_step = 0.001

  subsection explicit solver options

    set runge_kutta_order = 4

  end

end

# freestream Mach number
subsection euler
  set mach_infinity = 0.1
end
