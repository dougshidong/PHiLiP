# -------------------

set test_type = stability_fr_parameter_range

# Number of dimensions
set dimension = 1

set use_weak_form = false

set overintegration = 0

set flux_nodes_type = GL

set use_split_form = false

set use_curvilinear_split_form = false

set use_weight_adjusted_mass = true

set use_periodic_bc = true

set use_energy = false

set flux_reconstruction = user_specified_value
set FR_user_specified_correction_parameter_value = 0.186

set number_ESFR_parameter_values = 10
set ESFR_parameter_values_start = 1.0e-4
set ESFR_parameter_values_end = 1.0e4

set use_inverse_mass_on_the_fly = true

set use_classical_FR = false

# The PDE we want to solve
set pde_type = advection

set conv_num_flux = lax_friedrichs

subsection ODE solver

  set ode_output = verbose
  
#  set nonlinear_max_iterations = 500
  set nonlinear_max_iterations = 50000
  set nonlinear_steady_residual_tolerance = 1e-12

  set print_iteration_modulo = 100
 # set print_iteration_modulo = 1

  set ode_solver_type = runge_kutta

  set initial_time_step = 0.001

  set runge_kutta_method = rk4_ex

end

subsection manufactured solution convergence study
  #set use_manufactured_source_term = true

  # Starting degree for convergence study
  set degree_start      = 2

  # Initial grid of size 2^initial_grid_size
  set initial_grid_size = 3

  # Number of grids in grid study
  set number_of_grids   = 5
end

subsection flow_solver
  set flow_case_type = convection_diffusion
  set apply_initial_condition_method = project_initial_condition_function
  set poly_degree = 2
  set final_time = 0.5
  subsection grid
    set grid_left_bound = -1.0
    set grid_right_bound = 1.0
  end
end
