# Listing of Parameters
# ---------------------
# Number of dimensions
set dimension = 3

# The kind of solver for the linear system. Choices are
# <advection|convection_diffusion>.
set pde_type  = advection


subsection ODE solver
  # Maximum nonlinear solver iterations
  set nonlinear_max_iterations            = 500000

  # Nonlinear solver residual tolerance
  set nonlinear_steady_residual_tolerance = 1e-10

  # Print every print_iteration_modulo iterations of the nonlinear solver
  set print_iteration_modulo              = 1

  # Explicit or implicit solverChoices are <explicit|implicit>.
  set solver_type                         = implicit
end


subsection manufactured solution convergence study
  # Last degree used for convergence study
  set degree_end   = 3

  # Starting degree for convergence study
  set degree_start = 1
end

